<% include('../layouts/header.ejs')%>

<h1 style="text-align: center; color: #000; font-family: Arial, sans-serif;">ADMIN LOG IN</h1>

<% if (typeof message !== 'undefined') { %>
    <h4 style="text-align: center; color: #e74c3c;"><%=   message   %></h4>
<% } %>

<form action="" method="post" style="max-width: 400px; margin: 0 auto; padding: 20px; background-color: #ecf0f1; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.2); text-align: center;">

    <input type="email" name="email" placeholder="Enter Email" required style="width: calc(100% - 22px); margin-bottom: 10px; padding: 8px; border: 1px solid #bdc3c7; border-radius: 4px; box-sizing: border-box;">
    <br>
    <input type="password" name="password" placeholder="Enter Password" required style="width: calc(100% - 22px); margin-bottom: 20px; padding: 8px; border: 1px solid #bdc3c7; border-radius: 4px; box-sizing: border-box;">
    <br>
    <input type="submit" value="Login" style="width: 100%; height: 40px; font-size: 14px; background-color: #000; color: #fff; border: none; border-radius: 4px; cursor: pointer; margin-bottom: 10px;">
    <br><br>
   
</form>




<% include('../layouts/footer.ejs')%>